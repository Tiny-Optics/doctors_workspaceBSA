# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Application
APP_ENV=production
PORT=8080

# Database
BLUEPRINT_DB_HOST=mongodb
BLUEPRINT_DB_PORT=27017
BLUEPRINT_DB_USERNAME=your_db_username
BLUEPRINT_DB_ROOT_PASSWORD=your_secure_password_here
BLUEPRINT_DB_DATABASE=doctors_workspace

# JWT Secret (CRITICAL - Generate a strong secret!)
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET

# Dropbox Integration
DROPBOX_APP_API_ACCESS_TOKEN=your_dropbox_access_token
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret
DROPBOX_APP_PARENT_FOLDER=/home/Doctors_Workspace

# Frontend API URL
# Update this to your production domain
VITE_API_URL=https://your-domain.bloodsa.org.za

# Email API (for notifications)
EMAIL_API_KEY=your_email_api_key
EMAIL_FROM=noreply@bloodsa.org.za

# Domain (for SSL/certificates)
DOMAIN=your-domain.bloodsa.org.za

